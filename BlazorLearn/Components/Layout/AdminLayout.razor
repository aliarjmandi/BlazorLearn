@inherits LayoutComponentBase

<div class="admin-simple @(collapsed ? "mini" : "")">
    <!-- هدر -->
    <header class="admin-header">
        <div class="brand">فروشگاه آنلاین</div>
        <button class="btn-toggle" title="باز/بسته منو" @onclick="Toggle">
            <i class="bi bi-list"></i>
        </button>
    </header>

    <!-- سایدبار -->
    <aside class="admin-sidebar">
        <div class="sidebar-inner">
            <AdminNav />

            <!-- پروفایل پایین منو -->
            <div class="nav-footer">
                <img class="avatar" src="/images/placeholder-avatar.png" alt="avatar" />
                <div class="user-box">
                    <div class="user-name">کاربر عزیز</div>
                    <a class="logout" href="/Account/Logout">خروج</a>
                </div>
            </div>
        </div>
    </aside>

    <!-- محتوا -->
    <main class="admin-content">
        @Body
    </main>
</div>

@code {
    private bool collapsed = false;
    private void Toggle() => collapsed = !collapsed;
}
