@namespace Components.Storefront
@using BlazorLearn.Data.DTOs

@if (Items?.Count > 0)
{
    <div class="@CssClass">
        <div class="row g-3">
            @foreach (var c in Items)
            {
                <div class="col-6 col-md-3">
                    <a class="sf-cat-card d-flex align-items-center gap-2 p-2 bg-white border rounded-3 text-reset"
                       href="@($"/category/{c.Slug}")">
                        <img src="/images/cat-placeholder.png" alt="@c.Name" width="36" height="36" class="rounded" />
                        <span class="fw-600">@c.Name</span>
                    </a>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public List<CategoryDto> Items { get; set; } = new();
    [Parameter] public string? CssClass { get; set; }
}
