@namespace Components.Storefront
@using BlazorLearn.Data.DTOs

@if (Items?.Any() == true)
{
    <div class="row g-3">
        @foreach (var p in Items)
        {
            <div class="col-12 col-md-4 col-lg-3 d-flex">
                <ProductCard Item="p" CssClass="h-100 shadow-sm" />
            </div>
        }
    </div>
}

@code {
    [Parameter] public IEnumerable<ProductDto> Items { get; set; } = Enumerable.Empty<ProductDto>();
}
